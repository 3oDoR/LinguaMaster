<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/background_word_card"
        android:scaleType="fitXY"
        android:src="@drawable/ic_background_word_and_translate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/word"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/et_word"
        android:layout_width="0dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_word"
        android:background="@drawable/ic_background_edit_text"
        android:layout_marginStart="29.17dp"
        android:layout_marginEnd="29.17dp"
        android:layout_marginTop="15dp"
        android:hint="@string/word"
        android:gravity="center"
        android:textSize="16sp"
        android:autofillHints="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_translate"
        android:layout_width="0dp"
        android:layout_height="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_word"
        android:background="@drawable/ic_background_edit_text"
        android:layout_marginStart="29.17dp"
        android:layout_marginEnd="29.17dp"
        android:layout_marginTop="15dp"
        android:hint="@string/translate"
        android:gravity="center"
        android:textSize="16sp"
        android:inputType="text" />

</androidx.constraintlayout.widget.ConstraintLayout>